# AgentCost Backend - Environment Variables
# Copy this file to .env and update with your values

# ENVIRONMENT
# Options: development, staging, production
ENVIRONMENT=development

# DATABASE
# For development (SQLite - works out of the box)
DATABASE_URL=sqlite+aiosqlite:///./agentcost.db

# For production (PostgreSQL - RECOMMENDED)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/agentcost

# SECURITY
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# JWT Token Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
# Add your frontend domains (comma-separated JSON array)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:5173"]



# RATE LIMITING
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# FEATURES
# Enable debug mode (shows SQL queries, detailed errors)
DEBUG=true

# Maximum events per batch request
MAX_BATCH_SIZE=100

# PRICING SYNC (LiteLLM / OpenRouter)
AUTO_SYNC_PRICING_ON_STARTUP=true

# Background sync interval in hours (0 = no background sync)
# Prices are refreshed from LiteLLM every N hours
PRICING_SYNC_INTERVAL_HOURS=24

# EMAIL (Resend)
# Get your API key from https://resend.com
RESEND_API_KEY=re_your_api_key_here

# Verified sender email from your Resend domain
RESEND_SENDER_EMAIL=noreply@yourdomain.com
RESEND_SENDER_NAME=AgentCost

# Frontend URL for email links (verification, password reset)
FRONTEND_URL=http://localhost:3000

# Required for "Continue with Google" on login/register pages
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ADMIN / SUPERUSER
# The backend auto-creates the admin on every startup from these vars.
ADMIN_EMAIL=admin@agentcost.tech
ADMIN_PASSWORD=
# ^^^ Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# ===========================================
# SERVER CONFIGURATION (for direct uvicorn run)
# ===========================================
HOST=0.0.0.0
PORT=8000

# ===========================================
# SESSION CONFIGURATION
# ===========================================
# Extended session duration in days (for "remember me")
EXTENDED_SESSION_DAYS=30

# ===========================================
# EXTERNAL APIS (pricing sync)
# ===========================================
# Override these if sources change or you need to use a mirror
# LITELLM_PRICING_URL=https://raw.githubusercontent.com/BerriAI/litellm/main/model_prices_and_context_window.json
# OPENROUTER_MODELS_URL=https://openrouter.ai/api/v1/models

# ===========================================
# RATE LIMITING
# ===========================================
# Backend: "memory" (default, single-instance) or "redis" (multi-instance)
RATE_LIMIT_BACKEND=memory
# Required if using redis backend
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# REQUEST LIMITS
# ===========================================
# Maximum request body size in MB
MAX_REQUEST_SIZE_MB=10
